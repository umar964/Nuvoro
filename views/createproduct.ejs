<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>
<style>
  /* Dark Theme Base Styles */
  body {
    background-color: #121212;
    color: #e0e0e0;
    font-family: 'Jost', sans-serif;
    margin: 0;
    padding: 0;
    /* min-height: auto; */
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    /* padding-bottom: 20px; */
  }

  .main-create-product {
    width: 90%;
    /* min-height: 100vh; */
    height: auto;

    max-width: 800px;
    background-color: #1e1e1e;
    
     /* background-color: red; */
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    padding: 2.5rem;
    margin: 2rem 0;
    border: 1px solid #333;
  }

  h2 {
    color: #9c8321;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: 1px;
  }

  .create-product-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  input, textarea, select {
    padding: 14px 18px;
    background-color: #2d2d2d;
    border: 1px solid #444;
    border-radius: 8px;
    font-size: 1rem;
    color: #e0e0e0;
    font-family: 'Jost', sans-serif;
    transition: all 0.3s ease;
  }

  input:focus, textarea:focus, select:focus {
    outline: none;
    border-color: #9c8321;
    box-shadow: 0 0 0 3px rgba(156, 131, 33, 0.3);
  }

  input[type="file"] {
    padding: 12px;
    background-color: #252525;
    border: 1px dashed #555;
    color: #aaa;
  }

  input[type="file"]::file-selector-button {
    background: #9c8321;
    color: white;
    border: none;
    padding: 10px 18px;
    border-radius: 6px;
    margin-right: 1rem;
    cursor: pointer;
    font-family: 'Jost', sans-serif;
    transition: all 0.3s;
  }

  input[type="file"]::file-selector-button:hover {
    background: #7a6920;
  }

  textarea {
    min-height: 120px;
    resize: vertical;
  }

  fieldset {
    border: 1px solid #444;
    border-radius: 8px;
    padding: 1.2rem;
    margin-bottom: 1rem;
  }

  legend {
    color: #9c8321;
    padding: 0 10px;
    font-weight: 500;
  }

  label {
    display: inline-flex;
    align-items: center;
    margin-right: 1.5rem;
    margin-bottom: 0.8rem;
    cursor: pointer;
  }

  input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin-right: 8px;
    accent-color: #9c8321;
  }

  select {
    appearance: none;
    background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='%239c8321'%3e%3cpath d='M7 10l5 5 5-5z'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right 1rem center;
    background-size: 1.2rem;
    padding-right: 2.5rem;
  }

  input[type="submit"] {
    background: #9c8321;
    color: white;
    border: none;
    padding: 16px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s;
    margin-top: 1rem;
  }

  input[type="submit"]:hover {
    background: #7a6920;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(156, 131, 33, 0.4);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .main-create-product {
      padding: 1.5rem;
      width: 95%;
    }
    
    input, textarea, select {
      padding: 12px 15px;
    }
    
    fieldset {
      padding: 1rem;
    }
    
    label {
      display: flex;
      margin-right: 0;
      margin-bottom: 0.6rem;
    }
  }
</style>
<body>
    
   
    <div class="main-create-product">
        <h2> Create Product</h2>
        <form class="create-product-form" autocomplete="off" action="/create" method="post" enctype="multipart/form-data">
            <input  name="image" type="file" placeholder="select a file">
            <input class="productnaam" name="name"  type="text" placeholder="product Name">
            <input name="price" type="text" placeholder="Discounted Price">
            <input name="discount" type="text" placeholder="Discount">
            <label for="description">Product Description:</label>
            <textarea id="description" name="description" ></textarea>

            
    
            <fieldset>
                <legend>Select Sizes:</legend>
                <% const sizes = ['S', 'M', 'L', 'XL', 'XXL']; %>
                <% sizes.forEach(size => { %>
                    <label>
                        <input type="checkbox" name="sizes" value="<%= size %>"> <%= size %>
                    </label><br>
                <% }); %>
            </fieldset>
    
            <fieldset>
                <legend>Select Colors:</legend>
                <% const colors = ['red','green', 'black','yellow','white', 'brown', 'purple']; %>
                <% colors.forEach(color => { %>
                    <label>
                        <input type="checkbox" name="colors" value="<%= color%>"> <%= color %>
                    </label><br>
                <% }); %>
            </fieldset>
            <select name="page" required>
                <option value="shirt&tshirt">Shirt & T-shirt</option>
                <option value="pant">Pant</option>
                <option value="sneaker">Sneaker</option>
                <option value="watch">Watch</option>
              </select>
     
            <input type="submit" placeholder="submit">
        </form>
    </div>
    
     
 
</body>
</html>