<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Image Animation</title>
  <link rel="stylesheet" href="styles.css">
</head>
<style>
    body {
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #1a1a1a;
  overflow: hidden;
}

.image-container {
  position: relative;
  width: 100%;
  height: 300px;
  display: flex;
  justify-content: space-between;
}

.animated-image {
  position: absolute;
  top: 50%;
  width: 200px;
  height: 300px;
  opacity: 0.7;
  border-radius: 20px;
  transition: all 0.5s ease;
  object-fit: cover;
}

.center-image {
  width: 320px;
  height: 440px;
  opacity: 1;
  object-fit: cover;
  border-radius: 20px;
}

.moving {
  transition: all 20s linear; /* Control the speed here */
}

</style>
<body>
  <div class="image-container">
    <img src="/images/t.jpg" alt="Image 1" class="animated-image">
    <img src="/images/w.jpg" alt="Image 2" class="animated-image">
    <img src="/images/t.jpg" alt="Image 3" class="animated-image">
    <img src="/images/w.jpg" alt="Image 5" class="animated-image">
    <img src="/images/t.jpg" alt="Image 1" class="animated-image">
    <img src="/images/w.jpg" alt="Image 2" class="animated-image">
    <img src="/images/t.jpg" alt="Image 3" class="animated-image">
    
    <img src="/images/w.jpg" alt="Image 5" class="animated-image">
    <img src="/images/t.jpg" alt="Image 1" class="animated-image">
    <img src="/images/w.jpg" alt="Image 2" class="animated-image">
    <img src="/images/t.jpg" alt="Image 3" class="animated-image">

    <img src="/images/w.jpg" alt="Image 5" class="animated-image">
    <img src="/images/t.jpg" alt="Image 4" class="animated-image">
    <img src="/images/w.jpg" alt="Image 5" class="animated-image">
 
    
  </div>

 <script>
    const images = document.querySelectorAll('.animated-image');
let screenWidth = window.innerWidth;
let centerPoint = screenWidth / 2;
let imageWidth = 100;
let distanceBetweenImages = 330; // Distance between images
let speed = 4; // Speed of the animation (lower means faster)

// Function to move images
function moveImages() {
  images.forEach((img, index) => {
    // Set initial positions of images (left side of the screen)
    let initialPosition = -imageWidth - (index * distanceBetweenImages);
    img.style.left = `${initialPosition}px`;
    img.style.transform = `translateY(-50%)`;

    let move = setInterval(() => {
      // Move each image to the right
      initialPosition += 1; // You can change the step to control movement speed
      img.style.left = `${initialPosition}px`;

      // Check if image is at the center and enlarge it
      if (initialPosition + imageWidth / 2 > centerPoint - 100 && initialPosition + imageWidth / 2 < centerPoint + 100) {
        img.classList.add('center-image'); // Enlarge at center
        setTimeout(() => {
          img.classList.remove('center-image'); // Reset size after 2 seconds
        }, 1700);
      }

      // Reset image to the left once it moves off the right side
      if (initialPosition > screenWidth) {
        initialPosition = -imageWidth - (images.length - 1) * distanceBetweenImages; // Reset all images at the same time
      }
    }, 4); // The lower the speed, the smoother the animation
  });
}

// Initialize the movement
moveImages();

 </script>
</body>
</html>










