  <div class="mainsearch">
      
  <div class="search-products">
    <%if(message){%>
      <div class="empty-cart">
        <h3>Sorry, no results found!</h3>
     </div>
     <%} else {%>
      <%  products.forEach(function(product) { %>
         
       <a href="/shopping/<%= product._id%>">
        <div class="photodetail">
          <div class="searchphoto">
            <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
        </div>
        <div class="searchdetail">
      <div class="search-product-name"><span><%=product.name%></span></div>
             <div class="search-price-discount">
               <div class="search-price">
                
                  <p> <% 
                    var price = product.price;
                    var discount = product.discount;
                    var originalPrice = price / (1 - discount / 100); 
                  %>
                  <%= originalPrice.toFixed(0) %></p>
               
                  <span class="fnl-price"> <%=product.price%>.00</span>
                   
               </div>
               <%if(discount){%>
                <span class="dis">-<%=product.discount%>%</span>
              <% }%>
              
               
  
              
             </div>
             <div class="free-del">
              <p>Free delivery</p>
             </div>
        </div>

         </div>
       </a>
       <% }) %>
    <% } %>
  </div>
   
    

   
     
 
